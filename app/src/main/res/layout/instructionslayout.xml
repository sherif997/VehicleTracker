<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Instructions:"
        android:fontFamily=""
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/Bar"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:id="@+id/disclaimerView"
        android:layout_height="135dp"
        android:textSize="20sp"
        android:text="Disclaimer: Use of this application requires use of SMS messages.
Ensure you have enough text messages in your plan when using this application too avoid unwanted charges."
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/genericText"
                android:text="@string/instruction_mainscreen"
                android:textSize="20dp"/>




        </LinearLayout>

    </ScrollView>



</LinearLayout>