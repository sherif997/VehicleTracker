<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:summary="Cap the rate at which you wish to receive SMS notifications"
        android:defaultValue="180"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:key="sync_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sync_frequency" />

    <!-- This preference simply launches an intent when selected. Use this UI sparingly, per
         design guidelines. -->
    <ListPreference
        android:title="@string/pref_refresh_title"
        android:defaultValue="0"
        android:summary="Control the auto refresh rate of the main screen"
        android:entries="@array/pref_refresh_entries"
        android:entryValues="@array/pref_refresh_values"
        android:key="refresh_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        />






</PreferenceScreen>
